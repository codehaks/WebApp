@model MyApp.Pages.Movies.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />

<form method="post">
    <input hidden asp-for="Movie.Id" />

    <input asp-for="Movie.Name" placeholder="Name" class="form-control" />
    <br>
    <input asp-for="Movie.Year" placeholder="Year" class="form-control" />
    <br>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="index" class="btn btn-link">Back to list</a>

</form>


